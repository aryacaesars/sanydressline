generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  CategoryID Int      @id @default(autoincrement())
  Name       String   @unique
  CreatedAt  DateTime @default(now())
  UpdatedAt  DateTime @updatedAt
  Dress      Dress[]
}

model Dress {
  DressID     Int      @id @default(autoincrement())
  Name        String
  Description String
  Price       Decimal
  OrderCount  Int
  IsVisible   Boolean  @default(true)
  CreatedAt   DateTime @default(now())
  UpdatedAt   DateTime @updatedAt
  CategoryID  Int
  Category    Category @relation(fields: [CategoryID], references: [CategoryID])
  Image       Image[]
  Sizes       Size[]
}

model Size {
  SizeID    Int      @id @default(autoincrement())
  Size      String
  DressID   Int
  Dress     Dress    @relation(fields: [DressID], references: [DressID])
  Stock     Int
  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
}

model Image {
  ImageID     Int          @id @default(autoincrement())
  PublicID    String
  Url         String
  Alt         String
  CreatedAt   DateTime     @default(now())
  UpdatedAt   DateTime     @updatedAt
  DressID     Int?
  ContentID   Int?
  Dress       Dress?       @relation(fields: [DressID], references: [DressID])
  PageContent PageContent? @relation(fields: [ContentID], references: [ContentID])
}

model PageContent {
  ContentID Int      @id @default(autoincrement())
  PageName  String
  Section   String
  Title     String
  Paragraph String
  Img       Json
  Images    Image[]
  UpdatedAt DateTime @updatedAt
}
